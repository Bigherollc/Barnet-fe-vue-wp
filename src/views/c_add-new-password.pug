extends _layouts/layout

block append vars
  - title = 'Add New Password'
  - useFooter = true
  - useHeader = true
  - isFooterLegal = true
  - namespace = '--fit-vh --bg-gradient'

block container
  section.component-form-request(data-request-step)
    .container
      .component-form-request__wrapper(style='background-image: url(../images/bg-hexagon.png)')
        .component-form.--center
          .component-form__wrapper
            +headingGroup('Add New Password', '', '--size-lg to-uppercase').--dark-mode.--mg-bottom-md.text-center(data-heading)
            +nav-list([
              {
                title: 'Please try again!!!'
              }
            ]).parsley-errors-list.filled(data-validate-server)
            form.component-form__form(data-parsley-validate data-parsley-errors-messages-disabled)
              .component-form__content(data-tab-content)
                .component-form__group
                  +headingForm('', 'Your password must be at least seven characters. For added security we recommend using upper and lower case letters as well as special characters.')
                  .component-form__group__input
                    .component-form__item
                      input.form-control.--dark-mode(type="password" name="new_password" id="new_password" placeholder="New Password" autocomplete="off" minlength=7 data-parsley-required)
                    .component-form__item
                      input.form-control.--dark-mode(type="password" name="re_new_password" id ="re_new_password" placeholder="Re-Enter New Password" autocomplete="off" minlength=7 data-parsley-equalto="#new_password" data-parsley-required)
                .component-form__group.text-center
                  button.btn.btn-solid.btn-large.--dark-mode(data-next-btn type="submit")
                    | Set Password