extends _layouts/layout

block append vars
  - title = 'Sign In'
  - useFooter = false
  - useHeader = false
  - namespace = '--fit-vh --bg-gradient'

block container
  section.component-form-account(style='background-image:  url("../images/bg-sign-in.png")')
    .component-form.--right
      .component-form__wrapper
        +link('/en/index.html', 'Logo').component-form-account__logo
          +img('/images/logo-barnet-large.svg', 'Logo')
        +headingGroup('where science meets fashion', '', 'to-uppercase').--dark-mode
          | where science meets fashion
        +nav-list([
          {
            title: 'Please try again!!!'
          }
        ]).parsley-errors-list.filled(data-validate-server)
        form.component-form__form(data-parsley-validate data-parsley-errors-messages-disabled)
          .component-form__group
            .component-form__group__input
              .component-form__item
                input.form-control.--dark-mode(type="email" name="email" placeholder="Email" autocomplete="off" data-parsley-required data-parsley-pattern='/^([A-Za-z0-9][\._\+\-]{0,1})+[A-Za-z0-9]+@[A-Za-z0-9]+(\.{0,1}[A-Za-z0-9]){2,3}\.[a-z]{2,3}$/')
              .component-form__item
                input.form-control.--dark-mode(type="password" name="password" placeholder="Password" autocomplete="off" minlength=7 data-parsley-required)
            +link('#', 'Forgot Passowrd?').component-form__link
            button(type="submit").btn.btn-solid.btn-large.btn-block.--dark-mode
              | Sign In
          .component-form__group
            +headingForm('New Customer')
            +link('#', 'Request Access').btn.btn-regular.btn-block.--dark-mode.btn-gtm-request-access